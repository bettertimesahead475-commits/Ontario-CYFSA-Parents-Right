<script>
    let extractedText = "";

    // THIS READS THE FILE FROM THE USER'S COMPUTER
    function handleFile(input) {
        const file = input.files[0];
        const reader = new FileReader();

        reader.onload = function(e) {
            extractedText = e.target.result; 
            document.getElementById('fileNameDisplay').innerHTML = "<strong>‚úÖ " + file.name + " loaded.</strong>";
            document.getElementById('actionBtn').disabled = false;
            document.getElementById('actionBtn').innerText = "Analyze " + file.name;
        };
        reader.readAsText(file);
    }

    // THIS SENDS THE DATA TO THE "BRAIN" (Netlify Function)
    async function runAnalysis() {
        const btn = document.getElementById('actionBtn');
        btn.disabled = true;
        btn.innerText = "üïµÔ∏è Scanning...";

        try {
            const response = await fetch('/.netlify/functions/analyze', {
                method: 'POST',
                body: JSON.stringify({ 
                    prompt: "Extract the Case Number, Document Type, and all specific allegations from this text. Format it like a legal brief: " + extractedText 
                })
            });

            const data = await response.json();
            document.getElementById('resultsText').innerText = data.candidates[0].content.parts[0].text;
            document.getElementById('results-wrapper').style.display = 'block';
            btn.innerText = "Analysis Ready";
        } catch (err) {
            alert("Error: Make sure analyze.js is in netlify/functions/");
            btn.disabled = false;
        }
    }
</script>

